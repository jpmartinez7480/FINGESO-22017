<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>IniciarSesionServlet</servlet-name>
        <servlet-class>controladores.IniciarSesionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Dir_ver_Academico</servlet-name>
        <servlet-class>controladores.Dir_ver_Academico</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DocenciaServlet</servlet-name>
        <servlet-class>controladores.DocenciaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>controladores.AdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>dirCompromisoServlet</servlet-name>
        <servlet-class>controladores.dirCompromisoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>evaluarAcademicoServlet</servlet-name>
        <servlet-class>controladores.evaluarAcademicoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IniciarSesionServlet</servlet-name>
        <url-pattern>/IniciarSesionServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Dir_ver_Academico</servlet-name>
        <url-pattern>/Dir_ver_Academico</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DocenciaServlet</servlet-name>
        <url-pattern>/DocenciaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/AdminServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dirCompromisoServlet</servlet-name>
        <url-pattern>/dirCompromisoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>evaluarAcademicoServlet</servlet-name>
        <url-pattern>/evaluarAcademicoServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
